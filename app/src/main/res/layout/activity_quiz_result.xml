<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    tools:context=".QuizSubmitActivity">

    <!--    <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/custom_toolbar" />

        </LinearLayout>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/result_bird"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:visibility="visible"
                app:lottie_loop="true" />

            <RelativeLayout
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/result_bird"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:padding="20dp"
                    android:id="@+id/rrResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:background="@drawable/correct_total_bg">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/general_sans_semibold"
                            android:text="Correct Answer"
                            android:textAlignment="center"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@color/dark_blue"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/checkmark" />

                                <TextView
                                    android:id="@+id/txtCorrectCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:fontFamily="@font/general_sans_semibold"
                                    android:text="10"
                                    android:textAlignment="center"
                                    android:textColor="@color/green_dark"
                                    android:textSize="@dimen/_15ssp" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_90sdp"
                        android:background="@drawable/wrong_total_bg">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/general_sans_semibold"
                            android:text="Wrong Answer"
                            android:textAlignment="center"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@color/dark_blue"
                                android:gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/_23sdp"
                                    android:layout_height="@dimen/_23sdp"
                                    android:src="@drawable/wrong_answer" />

                                <TextView
                                    android:id="@+id/txtWrongCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:fontFamily="@font/general_sans_semibold"
                                    android:text="100"
                                    android:textAlignment="center"
                                    android:textColor="@color/light_red"
                                    android:textSize="@dimen/_15ssp" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:padding="20dp"
                    android:layout_below="@+id/rrResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:background="@drawable/time_bg">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/general_sans_semibold"
                            android:text="Time Taken"
                            android:textAlignment="center"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@color/dark_blue"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_23sdp"
                                    android:layout_height="@dimen/_23sdp"
                                    android:src="@drawable/time" />

                                <TextView
                                    android:id="@+id/txtTimeTaken"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:fontFamily="@font/general_sans_semibold"
                                    android:text="10"
                                    android:textAlignment="center"
                                    android:textColor="@color/purple"
                                    android:textSize="@dimen/_15ssp" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_90sdp"
                        android:background="@drawable/accuracy_total_bg">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/general_sans_semibold"
                            android:text="Accuracy"
                            android:textAlignment="center"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/_10ssp" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@color/dark_blue"
                                android:gravity="center">


                                <ImageView
                                    android:layout_width="@dimen/_26sdp"
                                    android:layout_height="@dimen/_26sdp"
                                    android:src="@drawable/accuracy" />

                                <TextView
                                    android:id="@+id/txtCorrectAccuracy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:fontFamily="@font/general_sans_semibold"
                                    android:text="100"
                                    android:textAlignment="center"
                                    android:textColor="@color/yellow"
                                    android:textSize="@dimen/_15ssp" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>
                </LinearLayout>



            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llReattempt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnViewSolutionQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/yellow"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/_14sdp"
            android:text="View Solutions"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>